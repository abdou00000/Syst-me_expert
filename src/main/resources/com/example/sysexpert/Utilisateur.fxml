<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="380.0" prefWidth="354.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sysexpert.Utilisateur">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
   <children>
      <TextArea fx:id="faits" prefHeight="200.0" prefWidth="200.0" promptText="Entrez les faits séparés par des points virgules                    // Exemple : l'ecran est noire;la clée USB ne se lit pas;la souris ne fonctionne pas" />
      <Label fx:id="message">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <Button fx:id="submit" mnemonicParsing="false" onAction="#OnEnvoyer" text="Diagnostique">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#OnRetour1" text="Retour">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
